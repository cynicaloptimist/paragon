{
  "rules": {
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid",
        "playerViewState": {
          ".read": true
        },
        "playerViews": {
          ".read": true
        },
        "playerViewsPresence": {
          "$playerId": {
            ".write": "$playerId === auth.uid",
            ".read": true
          }
        }
      }
    },
    "playerViews": {
      "$playerViewId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.isString() || newData.isNumber()"
      }
    },
    "shared": {
      "$dashboardId": {
        ".read": true,
        ".write": true
      }
    },
    "pendingActions": {
      "$playerViewId": {
        ".read": true,
        ".write": true
      }
    }
  }
}
